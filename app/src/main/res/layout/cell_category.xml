<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rel_CategoryAdd"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:visibility="visible"
                app:cardCornerRadius="4dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_EF444D">

                    <ImageView
                        android:id="@+id/img_categoryImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/ll_quantity"
                android:fontFamily="@font/roboto_bold"
                android:padding="2dp"
                android:text="American Sushi Salmon"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/medium"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/ll_quantity"
                android:fontFamily="@font/roboto_light"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Paneer King melt burger is food available on here,,"
                android:textColor="@color/lightGrey"
                android:textSize="12dp"
                tools:ignore="SpUsage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="$24.00"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/small"
                    tools:ignore="SpUsage" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_CategoryAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="2dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cell_category"
        android:padding="2dp"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp">


            <EditText
                android:id="@+id/txt_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:drawableEnd="@drawable/ic_dropdown"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:minEms="3"
                android:text="kg"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btn_minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/minus_btn" />

                <EditText
                    android:id="@+id/edTextQuantity"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:text="0"
                    android:textColor="@color/darkGrey"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/small"
                    tools:ignore="SpUsage" />

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/plus_btn" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>